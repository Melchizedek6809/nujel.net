[defn build [ctx depth]
  "Build up a navigation and return a list of trees, describing the entries"
  :export
  [-> [tree/values [tree/ref ctx :frontmatter]]
      [filter [fn [a] [== depth [tree/ref a :depth]]]]
      [list/sort [fn [a b] [< [tree/ref a :href]
                              [tree/ref a :href]]]]]]
