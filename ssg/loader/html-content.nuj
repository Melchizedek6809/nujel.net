[import [add-loader] :ssg/loader]
[import [get-out-path] :ssg/deployment]
[import [apply :as theme/apply] :ssg/theme]

[export do
        [defn ssg/loader/html-template/do [ctx path]
          "Loader that just copies the file over"
          [def dest-path [get-out-path ctx path]]
          [spit dest-path [theme/apply ctx path]]
          dest-path]]

[add-loader :otherwise ssg/loader/html-template/do]
